{   
    "config_id": "dev001",
	"outputs":{
        "print_verbosity": 2,
        "debug_plots": false
    },
    "data_source":{
        "subjects_dir": "data/corsano/",
        "multi_subjects": false,
        "subjects_to_load": ["all"],
        "multi_condition": {
            "status": false,
            "conditions": ["condition1"]
        },
		"device": "corsano-2872b",
		"sensor_type": ["ppg"]
	},
    "checkpoint":{
        "app_state": {
            "load": {
                "status": false,
                "directory": "data/checkpoints/app_state/",
                "checkpoint_id": 1,
                "data_id": "corsano_test_app_a"
            },
            "save": {
                "status": false,
                "directory": "data/checkpoints/app_state/",
                "checkpoint_id": 1,
                "data_id": "corsano_test_app_a"
            },
            "filename_format": "{config_id}_{subject_id}_{condition_id}_{sensor}_{checkpoint_id}.pkl - NOT IMPLEMENTED"
        },
        "pipeline_ppg": {
            "load": {
                "status": false,
                "directory": "data/checkpoints/pipeline_ppg/",
                "checkpoint_id": 2,
                "data_id": "corsano_test_pipeline_ppg_a"
            },
            "save": {
                "status": true,
                "directory": "data/checkpoints/pipeline_ppg/",
                "checkpoint_id": 2,
                "data_id": "corsano_test_pipeline_ppg_a"
            },
            "filename_format": "{config_id}_{subject_id}_{condition_id}_{sensor}_{checkpoint_id}.pkl - NOT IMPLEMENTED"
        }
    },
    "filter": {
        "sample_rate": 100,
        "lowcut": 0.15,
        "highcut": 10,
        "order": 4
    },
    "ppg_preprocessing": {
        "threshold": 10000,
        "min_duration": 100,
        "resample_freq": 100
    },
    "ppg_processing": {
        "beat_detector": "ampd",
        "plot": true,
        "plot_save": false,
        "plot_save_path": "output/visuals",
        "sqi_group_size": 10,
        "sqi_type": "composite",
        "sqi_composite_details":{
            "sqi_types": ["bpm_plausible","ibi_max", "ibi_ratio_group"],
            "combine_strategy": "sequential_validation",
            "type_details": {
                "bpm_plausible": {
                    "bpm_type": "group_bpm"
                }
            }
        }
    }
}
