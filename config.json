{
	"outputs":{
        "print_verbosity": 2,
        "debug_plots": false
    },
    "data_source":{
        "subjects_dir": "data/polar/subjects/",
        "multi_subjects": false,
        "subjects_to_load": ["all"],
        "multi_condition": {
            "status": true,
            "conditions": ["pre_heat_exposure", "intra_heat_exposure", "post_heat_exposure"]
        },
		"device": "polar-verity",
		"sensor_type": ["ppg","acc"]
	},
    "checkpoint":{
        "load": {
            "status": true,
            "directory": "data/checkpoints/",
            "checkpoint_id": 1,
            "data_id": "polar_test_1"
        },
        "save": {
            "status": false,
            "directory": "data/checkpoints/",
            "checkpoint_id": 1,
            "data_id": "polar_test_1"
        }
    },
    "filter": {
        "sample_rate": 100,
        "lowcut": 0.15,
        "highcut": 10,
        "order": 4
    },
    "ppg_preprocessing": {
        "threshold": 10000,
        "min_duration": 30
    },
    "ppg_processing": {
        "beat_detector": "ampd",
        "plot": true,
        "plot_save": false,
        "plot_save_path": "output/visuals",
        "sqi_group_size": 10,
        "sqi_type": "composite",
        "sqi_composite_details":{
            "sqi_types": ["bpm_plausible","ibi_max", "ibi_ratio_group"],
            "combine_strategy": "sequential_validation",
            "type_details": {
                "bpm_plausible": {
                    "bpm_type": "group_bpm"
                }
            }
        }
    }
}
